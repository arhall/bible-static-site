---
layout: character.njk
title: "{{ character.name }}"
description: "Discover where {{ character.name }} appears throughout Scripture."
pagination:
  data: charactersForPages
  size: 1
  alias: character
permalink: "/characters/{{ character.slug }}/"
eleventyComputed:
  title: "{{ character.name }} - Biblical Character"
---


<!-- Character Overview Section -->
<div class="character-overview">
  <div class="overview-left">
    <div class="character-info">
      <div class="character-badges">
        {% if character.testament %}
          <span class="testament-tag">{{ character.testament }} Testament</span>
        {% endif %}
        {% if character.category %}
          <span class="testament-tag category-tag">{{ character.category }}</span>
        {% endif %}
      </div>
      <h2 class="character-name-large">{{ character.name }}</h2>
      {% if character.characterType %}
        <p class="character-role">{{ character.characterType }}</p>
      {% endif %}
      {% if character.significance %}
        <div class="notability">
          <span class="notability-label">Significance:</span>
          <span class="notability-value">{{ character.significance | title }}</span>
        </div>
      {% endif %}
      <div class="character-stats-compact">
        <span class="stat-item">{{ character.totalAppearances }} {% if character.totalAppearances == 1 %}appearance{% else %}appearances{% endif %}</span>
        <span class="stat-item">{{ character.totalBooks }} {% if character.totalBooks == 1 %}book{% else %}books{% endif %}</span>
      </div>
    </div>
  </div>
  
  {% if character.basicProfile %}
  <div class="overview-right">
    <div class="profile-card overview-card">
      <h3>Biblical Overview</h3>
      {% if character.basicProfile.description %}
        <p class="description">{{ character.basicProfile.description }}</p>
      {% endif %}
      {% if character.basicProfile.biblicalSignificance %}
        <div class="significance">
          <span class="detail-label">Significance:</span>
          <p>{{ character.basicProfile.biblicalSignificance }}</p>
        </div>
      {% endif %}
      {% if character.basicProfile.contextualInsights %}
        <div class="insights">
          <span class="detail-label">Key Insights:</span>
          <ul>
            {% for insight in character.basicProfile.contextualInsights | slice(0, 3) %}
              <li>{{ insight }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
  {% endif %}
</div>

<!-- Character Study Content -->
<div class="character-study">
  {% if character.hasDetailedProfile or character.basicProfile or character.elementsOfPower %}

  <!-- Character Profile Cards -->
  <div class="profile-grid">

    <!-- Character Analysis Card -->
    {% if character.relationshipToGod or character.elementsOfPower or character.weaknessesAndFailures or character.victoriesOverDifficulties %}
    <div class="profile-card">
      <h3>Character Analysis</h3>
      
      {% if character.relationshipToGod %}
      <div class="analysis-section">
        <h4>Relationship with God</h4>
        <p>{{ character.relationshipToGod }}</p>
      </div>
      {% endif %}
      
      {% if character.elementsOfPower %}
      <div class="analysis-section">
        <h4>Strengths</h4>
        <ul>
          {% for element in character.elementsOfPower | slice(0, 3) %}
            <li>{{ element }}</li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}
      
      {% if character.weaknessesAndFailures %}
      <div class="analysis-section">
        <h4>Key Challenges</h4>
        <ul>
          {% for weakness in character.weaknessesAndFailures | slice(0, 2) %}
            <li>{{ weakness }}</li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}
    </div>
    {% endif %}

    <!-- Key Information Card -->
    {% if character.keyVerses or character.modernApplication %}
    <div class="profile-card">
      <h3>Key Information</h3>
      
      {% if character.keyVerses %}
      <div class="analysis-section">
        <h4>Scripture References</h4>
        <div class="verse-grid">
          {% for verse in character.keyVerses | slice(0, 4) %}
            <div class="verse-reference">{{ verse }}</div>
          {% endfor %}
        </div>
      </div>
      {% endif %}
      
      {% if character.modernApplication %}
      <div class="analysis-section">
        <h4>Modern Application</h4>
        <p>{{ character.modernApplication }}</p>
      </div>
      {% endif %}
    </div>
    {% endif %}

    <!-- Privileges Abused Card -->
    {% if character.privilegesAbused %}
    <div class="profile-card">
      <h3>Privileges Abused</h3>
      <div class="card-content">
        <ul class="privilege-list">
          {% for privilege in character.privilegesAbused %}
            <li class="privilege-item">{{ privilege }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
    {% endif %}

  </div>
  {% endif %}

  <!-- Gospel Connection Section -->
  {% set gospelInsight = characterGospelInsights[character.slug] %}
  {% if gospelInsight %}
  <div class="gospel-section">
    <h2>Gospel Connection</h2>
    
    <div class="gospel-card">      
      <div class="gospel-content">
        <div class="analysis-section">
          <h4>Points to Christ</h4>
          <p>{{ gospelInsight.christConnection }}</p>
        </div>
        
        <div class="analysis-section">
          <h4>Theological Significance</h4>
          <p>{{ gospelInsight.significance }}</p>
        </div>
        
        {% if gospelInsight.verses %}
        <div class="analysis-section">
          <h4>Key Verses</h4>
          <div class="gospel-verse-grid">
            {% for verse in gospelInsight.verses | slice(0, 3) %}
            <span class="gospel-verse">{{ verse }}</span>
            {% endfor %}
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Scripture Appearances Section -->
  {% if character.appearances and character.appearances.length > 0 %}
  <div class="appearances-section">
    <h2>Scripture Appearances</h2>
    <p class="section-subtitle">{{ character.totalAppearances }} appearances across {{ character.totalBooks }} books</p>
    
    <div class="appearances-grid">
      {% for appearance in character.appearances %}
        <a href="/books/{{ appearance.bookSlug }}/#chapter-{{ appearance.chapter }}" class="appearance-card">
          <div class="appearance-book">{{ appearance.book }}</div>
          <div class="appearance-chapter">Chapter {{ appearance.chapter }}</div>
          <div class="appearance-arrow">â†’</div>
        </a>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  <!-- Books Summary Section -->
  {% if character.books and character.books.length > 0 %}
  <div class="books-section">
    <h3>Biblical Books</h3>
    <p class="section-subtitle">Books where {{ character.name }} is mentioned</p>
    
    <div class="books-grid">
      {% for book in character.books %}
        <div class="book-badge">{{ book }}</div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  <!-- Study Source Citation -->
  {% if character.studySource %}
  <div class="study-citation">
    <p>{{ character.studySource }}</p>
    <a href="https://studyandobey.com/character-studies/" target="_blank" rel="noopener">
      Visit StudyandObey.com for more character studies
    </a>
  </div>
  {% endif %}

</div>