        </div>
        
        <div class="category-books">
          {% for book in books %}
            {% if book.category == category.name %}
            <a href="/books/{{ book.slug }}/" class="book-card">
              <div class="book-title">{{ book.name }}</div>
              {% if book.chapterSummaries and (book.chapterSummaries | length) > 0 %}
                <div class="book-progress">{{ book.chapterSummaries | length }} chapters</div>
              {% else %}
                <div class="book-progress pending">Coming soon</div>
              {% endif %}
            </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</section>

<script>
  // Hero search functionality
  function focusSearch() {
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
      searchInput.focus();
      searchInput.scrollIntoView({ behavior: 'smooth', block: 'center' });
      
      // Track hero CTA usage
      if (window.telemetry) {
        window.telemetry.recordUserAction('hero-search-cta');
      }
    }
  }
</script>