<section class="testament-section old-testament">
  <div class="testament-header">
    <div class="testament-badge">39 Books</div>
    <h2>Old Testament</h2>
    <p class="section-intro">The foundation of faith—God's covenant with Israel and the promise of redemption</p>
  </div>
  
  {% for category in categories %}
    {% if category.testament == "Old Testament" %}
      <div class="category-group">
        <div class="category-header">
          <h3>
            <a href="/categories/{{ category.slug }}/">{{ category.name }}</a>
            <span class="book-count">{{ category.bookCount }} books</span>
          </h3>
          <p class="category-description">{{ category.description }}</p>
        </div>
        
        <div class="category-books">
          {% for book in books %}
            {% if book.category == category.name %}
            <a href="/books/{{ book.slug }}/" class="book-card">
              <div class="book-title">{{ book.name }}</div>
              {% if book.chapterSummaries and (book.chapterSummaries | length) > 0 %}
                <div class="book-progress">{{ book.chapterSummaries | length }} chapters</div>
              {% else %}
                <div class="book-progress pending">Coming soon</div>
              {% endif %}
            </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</section>

<section class="testament-section new-testament">
  <div class="testament-header">
    <div class="testament-badge">27 Books</div>
    <h2>New Testament</h2>
    <p class="section-intro">The fulfillment of promise—the life of Christ and the birth of the Church</p>
  </div>
  
  {% for category in categories %}
    {% if category.testament == "New Testament" %}
