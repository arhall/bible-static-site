<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="/assets/favicon.svg" type="image/svg+xml">
  <title>{% if title %}{{ title }} - Bible Explorer{% else %}{{ renderData.title or metadata.title }}{% endif %}</title>
  <link rel="stylesheet" href="/styles.css">
  {% if description %}<meta name="description" content="{{ description }}">{% endif %}
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a class="brand" href="/">Bible Explorer</a>
      <a href="/categories/" class="{% if page.url == '/categories/' or page.url.startsWith('/categories/') %}active{% endif %}">Sections</a>
      <a href="/characters/" class="{% if page.url.startsWith('/characters/') %}active{% endif %}">Characters</a>
      <a href="/links/" class="{% if page.url == '/links/' %}active{% endif %}">Links</a>
    </nav>
    
    {{ content | safe }}
  </div>
</body>
</html>