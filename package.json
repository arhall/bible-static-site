{
  "name": "bible-static-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "eleventy --serve --watch",
    "build": "eleventy",
    "build:production": "NODE_ENV=production eleventy && npm run optimize",
    "build:analyze": "eleventy && node scripts/build-logger.js",
    "optimize": "npm run optimize:css && npm run optimize:html",
    "optimize:css": "postcss src/styles.css --use cssnano --output _site/styles.css",
    "optimize:html": "node scripts/compress-html.js",
    "clean": "rm -rf _site",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance.test.js --runInBand",
    "test:lighthouse": "jest tests/lighthouse.test.js --runInBand --testTimeout=120000",
    "test:benchmark": "jest tests/benchmark.test.js --runInBand",
    "test:all": "npm test && npm run test:performance && npm run test:benchmark",
    "performance:report": "node scripts/performance-report.js",
    "logs:analyze": "node scripts/build-logger.js",
    "docker:build": "./docker-build.sh",
    "docker:run": "docker run -p 8080:80 bible-static-site:latest",
    "docker:up": "docker-compose up",
    "docker:dev": "docker-compose --profile dev up bible-site-dev",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-bundle": "^3.0.7",
    "@jest/test-sequencer": "^30.0.5",
    "@types/jest": "^30.0.0",
    "chrome-launcher": "^1.2.0",
    "cssnano": "^7.1.1",
    "express": "^5.1.0",
    "html-minifier-terser": "^7.2.0",
    "htmlnano": "^2.1.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "puppeteer": "^24.17.0",
    "terser": "^5.43.1"
  }
}
